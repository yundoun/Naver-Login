<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="2dp"
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        >
        <shape android:shape="rectangle">
            <!-- 배경색 설정 -->
            <solid android:color="#FFFFFF" />
            <!-- 테두리 색상 및 두께 설정 -->
            <stroke
                android:width="1dp"
                android:color="#929292" />
        </shape>
    </item>
</layer-list>
