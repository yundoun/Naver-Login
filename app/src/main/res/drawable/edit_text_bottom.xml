<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- 투명 배경 -->
            <stroke
                android:width="1dp"
                android:color="#929292" /> <!-- 테두리 색상 및 두께 -->
            <corners
                android:bottomLeftRadius="8dp"
                android:bottomRightRadius="8dp" /> <!-- 하단 모서리 둥글게 -->
        </shape>
    </item>
</layer-list>
