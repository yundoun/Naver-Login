<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 전체 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 배경색 -->
        </shape>
    </item>
    <!-- 상단 및 좌우 테두리 -->
    <item
        android:bottom="-2dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- 투명 배경 -->
            <stroke
                android:width="1dp"
                android:color="#929292" /> <!-- 테두리 색상 및 두께 -->
            <corners
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
        </shape>
    </item>
</layer-list>
