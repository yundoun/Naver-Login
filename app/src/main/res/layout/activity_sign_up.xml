<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/singUp_logo"
        android:layout_width="91dp"
        android:layout_height="22dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/b_logo" />

    <TextView
        android:id="@+id/tv_realName"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginStart="192dp"
        android:gravity="center"
        android:text=" 실명 인증된 아이디로 가입"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <CheckBox
        android:id="@+id/cb_realName"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/sign_up_realname_checkbox"
        android:button="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_realName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.106" />

    <LinearLayout
        android:id="@+id/accountLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 아이디 입력 -->
        <EditText
            android:id="@+id/et_userId"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_layout_top"
            android:drawableLeft="@drawable/a_id"
            android:drawablePadding="10dp"
            android:hint="아이디"
            android:inputType="textEmailAddress"
            android:paddingLeft="20dp"
            android:textSize="12sp" />

        <!-- 비밀번호 입력 -->
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_layout_middle"
            android:drawableLeft="@drawable/a_password"
            android:drawablePadding="10dp"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:paddingLeft="20dp"
            android:textSize="12sp" />

        <!-- 이메일 입력 -->
        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_layout_bottom"
            android:drawableLeft="@drawable/a_id"
            android:drawablePadding="10dp"
            android:hint="[선택] 이메일주소 (비밀번호 찾기 등 본인 확인용)"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textSize="12sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/userInfoLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountLayout">

        <EditText
            android:id="@+id/et_userName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_layout_top"
            android:drawableLeft="@drawable/a_id"
            android:drawablePadding="10dp"
            android:hint="이름"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_userBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_layout_middle"
            android:drawableLeft="@drawable/a_id"
            android:drawablePadding="10dp"
            android:hint="생년월일 8자리"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/agencyLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_layout_middle"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_agency"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a_agency" />

            <TextView
                android:id="@+id/tv_agency"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="통신사 선택" />

            <Spinner
                android:id="@+id/sp_agency"
                android:layout_width="wrap_content"
                android:layout_height="50dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/radioLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/sign_up_layout_middle"
            android:orientation="horizontal"
            android:padding="16dp">


            <!-- 첫 번째 RadioGroup -->
            <RadioGroup
                android:id="@+id/radio_group_sex"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rd_male"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up_radio_layout"
                    android:button="@null"
                    android:gravity="center"
                    android:text="남자"
                    android:textColor="@drawable/sign_up_radio_text"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rd_female"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up_radio_layout"
                    android:button="@null"
                    android:gravity="center"
                    android:text="여자"
                    android:textColor="@drawable/sign_up_radio_text"
                    android:textSize="12sp" />

            </RadioGroup>

            <!-- 두 번째 RadioGroup -->
            <RadioGroup
                android:id="@+id/radio_group_native"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rd_local"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up_radio_layout"
                    android:button="@null"
                    android:gravity="center"
                    android:text="내국인"
                    android:textColor="@drawable/sign_up_radio_text"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rd_foreign"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/sign_up_radio_layout"
                    android:button="@null"
                    android:gravity="center"
                    android:text="외국인"
                    android:textColor="@drawable/sign_up_radio_text"
                    android:textSize="12sp" />

            </RadioGroup>

        </LinearLayout>


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/sign_up_layout_bottom"
            android:drawableLeft="@drawable/a_id"
            android:drawablePadding="10dp"
            android:hint="휴대전화번호"
            android:inputType="date"
            android:paddingLeft="20dp"
            android:textSize="12sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBoxAgreement"
                android:layout_width="111dp"
                android:layout_height="wrap_content"
                android:text="약관 동의"
                android:textSize="12sp" />

            <Spinner
                android:id="@+id/spinnerOptions2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btn_requst"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/sign_up_request_btn"
        android:text="인증요청"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>